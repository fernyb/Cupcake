<?xml version="1.0" encoding="UTF-8"?>
<package version="2.0">
  <name>Cupcake</name>
  <channel>pear.php.net</channel>
  <summary>A MVC Framework</summary>
  <description>A Slimmer MVC Framework with ideas from CakePHP but without the bloat.</description>
  <lead>
      <name>Fernando Barajas</name>
      <user>fernyb</user>
      <email>fernyb@fernyb.net</email>
      <active>yes</active>
  </lead>
  <date>2009-08-15</date>
  <version>
      <release>0.7.0</release>
      <api>0.7.0</api>
  </version>
  <stability>
      <release>beta</release>
      <api>beta</api>
  </stability>
  <license uri="http://www.opensource.org/licenses/mit-license.php">The MIT License</license>
  <notes>
  <![CDATA[
    * Initial release
  ]]>
  </notes>
  <contents>
    <dir name="/">
      <dir name="Cupcake">
        <file name="cupcake.php" role="php" />
        <file name="config.php" role="php" />
        <file name="controller.php" role="php" />
        <file name="dispatcher.php" role="php" />
        <file name="helpers.php" role="php" />
        <file name="import.php" role="php" />
        <file name="inflector.php" role="php" />
        <file name="logger.php" role="php" />
        <file name="router.php" role="php" />
        <file name="session.php" role="php" />
        <file name="view.php" role="php" />
        <file name="basics.php" role="php" />
        <file name="dispatcher_test.php" role="php" />
        <file name="request.php" role="php" />
        <dir name="http">
          <file name="header.php" role="php" />
          <file name="mime_types.php" role="php" />
        </dir>
        <dir name="helper">
          <file name="flash.php" role="php" />
          <file name="form.php" role="php" />
          <file name="session.php" role="php" />
          <file name="css_selector.php" role="php" />
          <file name="test_helper.php" role="php" />
        </dir>
        <dir name="response">
          <file name="json.php" role="php" />
          <file name="xml.php" role="php" />
        </dir>
        <dir name="session">
          <file name="cookie_store.php" role="php" />
        </dir>
        <dir name="specs">
          <dir name="inc">
            <file name="assertions.php" role="php" />
            <file name="spec.php" role="php" />
            <file name="spec_runner.php" role="php" />
          </dir>
          <file name="run_specs.php" role="php" />
          <file name="spec_helper.php" role="php" />
          <file name="spec_test.php" role="php" />
          <dir name="tests">
            <file name="basic_spec.php" role="test" />
            <file name="controller_spec.php" role="test" />
            <file name="dispatcher_spec.php" role="test" />
            <file name="helpers_spec.php" role="test" />
            <file name="router_spec.php" role="test" />
            <file name="session_spec.php" role="test" />
            <dir name="response">
              <file name="json_spec.php" role="test" />
              <file name="xml_spec.php" role="test" />
            </dir>
            <dir name="session">
              <file name="cookie_store_spec.php" role="test" />
            </dir>
          </dir>
        </dir>
        <file name="structure/config/environment.php" role="php" />
        <file name="structure/views/layouts/application.html.php" role="php" />
        <dir name="public">
          <file name="robots.txt" role="php" />
          <file name="favicon.ico" role="php" />
          <file name="index.php" role="php" />
          <file name="cupcake.php" role="php" />
          <file name=".htaccess" role="php" />
          <file name="404.html" role="php" />
          <file name="422.html" role="php" />
          <file name="500.html" role="php" />
          <dir name="stylesheets">
            <file name="master.css" role="php" />
          </dir>
          <dir name="javascripts">
            <file name="jquery.js" role="php" />
          </dir>
        </dir>
      </dir>
      <file name="Cupcake/scripts/cupcake.php" role="script" baseinstalldir="/" />
    </dir>
  </contents> 
  <dependencies>
    <required>
      <php>
        <min>5.3.0</min>
      </php>
      <pearinstaller>
        <min>1.8.0</min>
      </pearinstaller>
      <package>
        <name>Console_CommandLine</name>
        <channel>pear.php.net</channel>
        <min>1.1.0</min>
        <recommended>1.1.0</recommended>
      </package>
      <package>
        <name>Spectest</name>
        <channel>pear.php.net</channel>
        <min>0.7.0</min>
        <recommended>0.7.0</recommended>
      </package>
      <extension>
        <name>json</name>
      </extension>
    </required>
  </dependencies>
  <phprelease>
    <filelist>
      <install as="cupcake" name="Cupcake/scripts/cupcake.php" />
    </filelist>
  </phprelease>
</package>